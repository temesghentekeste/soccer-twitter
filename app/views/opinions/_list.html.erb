 <% obj.each do |opinion| %>
    <div class="card border-0 mb-0">
      <div class="card-body d-flex align-items-center">
        <%= link_to profile_path(opinion.author.username), class: 'd-flex text-decoration-none text-muted' do %>
          <div class="user-info">
            <%= user_avatar(opinion.author.id) %>   
          </div>
          <div>
            <span class="font-weight-bold"><%= opinion.author.full_name%></span><br>
            <%= opinion.text%>
            <small>
              <%= time_ago_in_words(opinion.created_at)%> ago 
            </small>
          </div>
        <% end %>
        <div id="vote-actions-<%= opinion.id %>"  data-id="<%= opinion.id %>" class="vote d-flex ml-5 align-self-center justify-content-around position-relative ml-auto votes-container">
          <span class="text-uppercase align-self-end position-absolute upvote-text ">Up vote</span><div class="fas fa-thumbs-up upvote <%= upvoted? opinion %>"></div>
          <div class="font-weight-bold score mx-4 rounded-circle bg-<%= score_status opinion.score %> py-2 px-3 text-center text-white"><%= opinion.score %></div>
          <span class="text-uppercase align-self-end position-absolute downvote-text ">down vote</span><div class="fas fa-thumbs-down downvote <%= downvoted? opinion %>"></div>
        </div> 
    </div>
      </div>
      
<% end %>